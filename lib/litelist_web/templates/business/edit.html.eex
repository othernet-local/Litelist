<h2>Edit Business</h2>

<%= render "form.html", Map.put(assigns, :action, business_path(@conn, :update, @business)) %>

<span><%= link "Back", to: business_path(@conn, :index) %></span>

<span><%= link "Delete", to: business_path(@conn, :delete, @business), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %></span>
