<h2>Listing Events</h2>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Location</th>
      <th>Contact info</th>
      <th>Url</th>
      <th>Slug</th>
      <th>Type</th>
      <th>Start time</th>
      <th>End time</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for event <- @events do %>
    <tr>
      <td><%= event.title %></td>
      <td><%= event.description %></td>
      <td><%= event.location %></td>
      <td><%= event.contact_info %></td>
      <td><%= event.url %></td>
      <td><%= event.slug %></td>
      <td><%= event.type %></td>
      <td><%= event.start_time %></td>
      <td><%= event.end_time %></td>

      <td class="text-right">
        <span><%= link "Show", to: event_path(@conn, :show, event), class: "btn btn-default btn-xs" %></span>
        <%= if @current_neighbor && @current_neighbor.id == event.neighbor_id do %>
          <span><%= link "Edit", to: event_path(@conn, :edit, event), class: "btn btn-default btn-xs" %></span>
          <span><%= link "Delete", to: event_path(@conn, :delete, event), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %></span>
        <% end %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= if @current_neighbor do %>
  <span><%= link "New Event", to: event_path(@conn, :new) %></span>
<% end %>